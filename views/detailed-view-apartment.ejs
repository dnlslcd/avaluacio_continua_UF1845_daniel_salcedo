<!DOCTYPE html>
<html lang="en">
<head>
    <title>Detailed View Apartment</title>
    <%- include('partials/head') %>
</head>
<body>
    <%- include('partials/header') %>

    <article class="container">
    <h1><%= selectedApartment.title %></h1>
    <header><%= selectedApartment.price %> â‚¬</header>
    <div><%= selectedApartment.description %></div>
    <img src="<%= selectedApartment.mainPhoto %>" alt="">
    <div><%= selectedApartment.size %> m<sup>2</sup></div>
    <div><%= selectedApartment.numberRooms  %></div>
    <div><%= selectedApartment.numberTotalBeds %></div>
    <div><%= selectedApartment.numberBathrooms %></div>
    <div><%= selectedApartment.maxCapacity %></div>
    <div><%= selectedApartment.houseRules %></div>

    <div>
        <h3>Servicios disponibles</h3>
        <ul>
          <% const serviceIcons = {
            'Wi-Fi': 'fa-wifi',
            'airConditioning': 'fa-snowflake-o',
            'heating': 'fa-fire',
            'tv': 'fa-tv',
            'kitchen': 'fa-cutlery',
            'disabilityInclusive': 'fa-wheelchair'
            } %>
          <% for (var service in selectedApartment.services) { %>
            <li>
              <i class="fa <%= serviceIcons[service] %>"></i>
            </li>
          <% } %>
        </ul>
      </div>

    <% if (isAdmin) { %>
      <a role="button" href="/admin/apartment/<%= selectedApartment._id %>/edit">Edit Apartment</a>
    <% } %>
    </article>

    <%- include('partials/footer') %>
</body>
</html>